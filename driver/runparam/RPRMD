!> @file RPRMD
!! @ingroup runparam
!! @brief Include file for runtime parameter module 
!! @author Adam Peplinski
!! @date Sep 28, 2017
!=======================================================================
!     module id and name
      integer rprm_id
      character*(*) rprm_name
      parameter(rprm_name='RUNPAR')

!     initialisation flag
      logical rprm_ifinit

!     master node for runtime parameter reading
      integer rprm_pid0

!     runtime parameter types
      integer rprm_par_int ! integer vriable
      parameter (rprm_par_int=1)
      integer rprm_par_real ! real vriable
      parameter (rprm_par_real=2)
      integer rprm_par_log ! logical vriable
      parameter (rprm_par_log=3)
      integer rprm_par_str ! string vriable
      parameter (rprm_par_str=4)

!     runtime parameter registration     
      integer rprm_id_max  ! max number of parameters to register
      parameter (rprm_id_max=300)
      integer rprm_par_num  ! number of registered parameters
      integer rprm_par_mpos ! max position of registered parameter
      integer rprm_par_nf ! number of fields in prm_par_id
      parameter (rprm_par_nf=2)
      integer rprm_id_size ! total size of rprm_par_id; requred by rprm_block.f
      parameter (rprm_id_size=rprm_par_nf*rprm_id_max) 
      integer rprm_par_mark ! occupied slot marker and number of registrating module
      parameter (rprm_par_mark=1)
      integer rprm_par_type ! parameter type
      parameter (rprm_par_type=2)
      integer rprm_par_id(rprm_par_nf,rprm_id_max) ! list of parameters; occupied slot + parameter typ

      integer rprm_lstl_mnm    ! length of parameter name and string
      parameter (rprm_lstl_mnm = 20)
      character*(*) rprm_blname  ! balnk parameter name
      parameter (rprm_blname='                    ')
      character*20 rprm_par_name(rprm_id_max) ! names of registered parameters
      integer rprm_lstl_mds    ! length of parameter description string
      parameter (rprm_lstl_mds = 132)
      character*132 rprm_par_dscr(rprm_id_max) ! descriptions of registered parameters

!     vectors of parameter values
      integer rprm_parv_int(rprm_id_max)
      real rprm_parv_real(rprm_id_max)
      logical rprm_parv_log(rprm_id_max)
      character*20 rprm_parv_str(rprm_id_max)

!     common blocks
!     integer variables
      common /RPRMI/ rprm_id, rprm_pid0, rprm_par_num, rprm_par_mpos, 
     $      rprm_par_id, rprm_parv_int

!     real variables
      common /RPRMR/ rprm_parv_real
      
!     logical variables
      common /RPRML/ rprm_ifinit, rprm_parv_log
      
!     string variables
      common /RPRMC/ rprm_par_name, rprm_par_dscr, rprm_parv_str
 